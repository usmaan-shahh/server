generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user  {
              id              Int              @id @default(autoincrement())
              name           String
              email          String            @unique
              password       String
              posts          Post[]
              createdAt      DateTime          @default(now())
            }

model Post  {
              id              Int              @id @default(autoincrement())
              title           String
              content         String?
              authorId        Int
              author          user             @relation(fields: [authorId], references: [id])
              createdAt       DateTime         @default(now())
            }

            